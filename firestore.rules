rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to employees collection (for frontend display)
    // But only authenticated users can write to it
    match /employees/{document} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can write
    }
    
    // Allow authenticated users to read and write to formSubmissions collection
    match /formSubmissions/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to departments collection
    match /departments/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to settings collection
    match /settings/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to attendance collection
    match /attendance/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to adminUsers collection
    match /adminUsers/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other operations by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}